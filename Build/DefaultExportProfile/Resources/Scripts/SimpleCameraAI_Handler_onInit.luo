






function SimpleCameraAI.onInit()


this.hSimpleCamera(this.getObject())
this.avatar(application.getCurrentUserSceneTaggedObject("gingy"))

object.matchRotation(this.hSimpleCamera(),this.avatar(),object.kGlobalSpace)
object.setRotation(this.hSimpleCamera(),0,180,0,object.kLocalSpace)
object.matchTranslation(this.hSimpleCamera(),this.avatar(),object.kGlobalSpace)
object.translate(this.hSimpleCamera(),0,1.5,5,object.kLocalSpace)


end
