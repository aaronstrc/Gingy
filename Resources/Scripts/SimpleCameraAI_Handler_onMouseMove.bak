function SimpleCameraAI.onMouseMove ( nPointX, nPointY, nDeltaX, nDeltaY, nRayPntX, nRayPntY, nRayPntZ, nRayDirX, nRayDirY, nRayDirZ )
--------------------------------------------------------------------------------
	
	--
    --Rotate the camera
    object.rotate ( this.hSimpleCamera ( ), 0, -nDeltaX * 360, 0, object.kLocalSpace )
	
--------------------------------------------------------------------------------
end
